/* app/globals.css – SAFE STUB */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* Import motion system */
@import '../styles/motion.css';

/* Drag and Drop Styles */
.dragging-active {
  user-select: none;
}

.dragging-active * {
  pointer-events: none;
}

.dragging-active [data-draggable] {
  pointer-events: auto;
}

/* Drag handle styles */
.drag-handle {
  cursor: grab;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.drag-handle:hover {
  opacity: 1;
}

.drag-handle:active {
  cursor: grabbing;
}

.group:hover .drag-handle {
  opacity: 0.7;
}

/* Drop zone indicators */
.drop-zone-active {
  background-color: rgba(59, 130, 246, 0.1);
  border-color: rgba(59, 130, 246, 0.3);
  transform: scale(1.02);
}

/* Smooth transitions for drag operations */
[data-draggable] {
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

/* Line clamp utilities */
.line-clamp-1 {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.line-clamp-2 {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.line-clamp-3 {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

/* Keep variables here; avoid url() or absolute paths */
:root {
  --background: oklch(1 0 0);
  --foreground: oklch(0.145 0 0);
  --border: oklch(0.922 0 0);
  --radius: 0.625rem;

  /* HT-005.1: Monochromatic color variables - Light theme */
  --primary: 0 0% 9%;        /* #171717 - Dark for light theme */
  --primary-foreground: 0 0% 98%; /* #fafafa - Light text on dark bg */
  --secondary: 220 9% 46%;
  --accent: 220 14% 96%;
  --muted: 220 4% 46%;
  --muted-foreground: 220 9% 46%;

  --grid-gutter-xs: 0.75rem;
  --grid-gutter-sm: 1rem;
  --grid-gutter-md: 1.5rem;
  --grid-gutter-lg: 2rem;
  --grid-gutter-xl: 2.5rem;

  --max-w-grid: 80rem;
  --max-w-container-page: 80rem;
  --max-w-container-prose: 65ch;

  /* HT-005.4: Advanced Typography System — Linear/Swift Inspired Font Hierarchy */
  
  /* Font Family System */
  --font-family-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'SF Pro Display', 'SF Pro Text', Roboto, 'Helvetica Neue', Arial, sans-serif;
  --font-family-mono: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
  
  /* HT-005.5: Mobile-First Responsive Design — Touch-Optimized Experience */
  
  /* Enhanced Responsive Breakpoints System */
  --breakpoint-xs: 20rem;    /* 320px - Extra small devices */
  --breakpoint-sm: 24rem;    /* 384px - Small devices */
  --breakpoint-md: 48rem;    /* 768px - Medium devices */
  --breakpoint-lg: 64rem;    /* 1024px - Large devices */
  --breakpoint-xl: 80rem;    /* 1280px - Extra large devices */
  --breakpoint-2xl: 96rem;  /* 1536px - 2X large devices */
  
  /* Touch Target Sizes - WCAG AA Compliant */
  --touch-target-min: 2.75rem;    /* 44px - Minimum touch target */
  --touch-target-comfortable: 3rem; /* 48px - Comfortable touch target */
  --touch-target-large: 3.5rem;   /* 56px - Large touch target */
  
  /* Mobile-First Spacing System */
  --spacing-mobile-xs: 0.5rem;     /* 8px */
  --spacing-mobile-sm: 0.75rem;    /* 12px */
  --spacing-mobile-md: 1rem;       /* 16px */
  --spacing-mobile-lg: 1.5rem;     /* 24px */
  --spacing-mobile-xl: 2rem;       /* 32px */
  --spacing-mobile-2xl: 3rem;      /* 48px */
  
  /* Desktop Spacing System */
  --spacing-desktop-xs: 0.75rem;   /* 12px */
  --spacing-desktop-sm: 1rem;      /* 16px */
  --spacing-desktop-md: 1.5rem;    /* 24px */
  --spacing-desktop-lg: 2rem;      /* 32px */
  --spacing-desktop-xl: 3rem;      /* 48px */
  --spacing-desktop-2xl: 4rem;     /* 64px */
  
  /* Typography Scale - Modular Scale (1.25 ratio) */
  --text-xs: 0.75rem;      /* 12px */
  --text-sm: 0.875rem;     /* 14px */
  --text-base: 1rem;       /* 16px - Base */
  --text-lg: 1.125rem;      /* 18px */
  --text-xl: 1.25rem;       /* 20px */
  --text-2xl: 1.5rem;      /* 24px */
  --text-3xl: 1.875rem;    /* 30px */
  --text-4xl: 2.25rem;     /* 36px */
  --text-5xl: 2.8125rem;   /* 45px */
  --text-6xl: 3.5rem;      /* 56px */
  --text-7xl: 4.375rem;    /* 70px */
  --text-8xl: 5.46875rem;  /* 87.5px */
  --text-9xl: 6.8359375rem; /* 109.375px */
  
  /* Responsive Typography Scale */
  --text-hero-mobile: clamp(2.5rem, 8vw, 4rem);      /* 40px - 64px */
  --text-hero-desktop: clamp(4rem, 10vw, 6rem);       /* 64px - 96px */
  --text-display-mobile: clamp(1.875rem, 5vw, 2.5rem); /* 30px - 40px */
  --text-display-desktop: clamp(2.5rem, 6vw, 3.5rem);  /* 40px - 56px */
  --text-heading-mobile: clamp(1.5rem, 4vw, 2rem);    /* 24px - 32px */
  --text-heading-desktop: clamp(2rem, 5vw, 2.5rem);   /* 32px - 40px */
  --text-body-mobile: clamp(0.875rem, 2.5vw, 1rem);   /* 14px - 16px */
  --text-body-desktop: clamp(1rem, 2.5vw, 1.125rem);  /* 16px - 18px */
  
  /* Font Weights - Linear/Swift Inspired */
  --font-weight-thin: 100;
  --font-weight-extralight: 200;
  --font-weight-light: 300;
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  --font-weight-extrabold: 800;
  --font-weight-black: 900;
  
  /* Line Heights - Optimized for readability */
  --leading-none: 1;
  --leading-tight: 1.25;
  --leading-snug: 1.375;
  --leading-normal: 1.5;
  --leading-relaxed: 1.625;
  --leading-loose: 2;
  
  /* Letter Spacing - Linear/Swift Inspired */
  --tracking-tighter: -0.05em;
  --tracking-tight: -0.025em;
  --tracking-normal: 0em;
  --tracking-wide: 0.025em;
  --tracking-wider: 0.05em;
  --tracking-widest: 0.1em;
  
  /* Typography Hierarchy Classes */
  --text-hero-size: var(--text-hero-desktop);
  --text-hero-weight: var(--font-weight-bold);
  --text-hero-leading: var(--leading-tight);
  --text-hero-tracking: var(--tracking-tighter);
  
  --text-display-size: var(--text-display-desktop);
  --text-display-weight: var(--font-weight-semibold);
  --text-display-leading: var(--leading-tight);
  --text-display-tracking: var(--tracking-tight);
  
  --text-heading-size: var(--text-heading-desktop);
  --text-heading-weight: var(--font-weight-semibold);
  --text-heading-leading: var(--leading-snug);
  --text-heading-tracking: var(--tracking-tight);
  
  --text-body-size: var(--text-body-desktop);
  --text-body-weight: var(--font-weight-normal);
  --text-body-leading: var(--leading-relaxed);
  --text-body-tracking: var(--tracking-normal);
  
  --text-caption-size: var(--text-sm);
  --text-caption-weight: var(--font-weight-medium);
  --text-caption-leading: var(--leading-normal);
  --text-caption-tracking: var(--tracking-wide);
  
  
  
  /* High-Tech Mesh Pattern */
  --gradient-mesh: 
    repeating-linear-gradient(0deg, transparent, transparent 20px, rgba(0, 0, 0, 0.03) 20px, rgba(0, 0, 0, 0.03) 21px),
    repeating-linear-gradient(90deg, transparent, transparent 20px, rgba(0, 0, 0, 0.03) 20px, rgba(0, 0, 0, 0.03) 21px),
    repeating-linear-gradient(45deg, transparent, transparent 28px, rgba(0, 0, 0, 0.02) 28px, rgba(0, 0, 0, 0.02) 29px),
    repeating-linear-gradient(-45deg, transparent, transparent 28px, rgba(0, 0, 0, 0.02) 28px, rgba(0, 0, 0, 0.02) 29px),
    linear-gradient(135deg, #ffffff 0%, #f8f8f8 20%, #f0f0f0 40%, #e8e8e8 60%, #e0e0e0 80%, #d8d8d8 100%);
  
  /* Section Backgrounds */
  --gradient-section-alt: linear-gradient(135deg, rgba(248, 248, 248, 0.95), rgba(240, 240, 240, 0.9));
  --gradient-card: linear-gradient(145deg, rgba(255, 255, 255, 0.98), rgba(248, 248, 248, 0.92));
  --gradient-glass: linear-gradient(135deg, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.4));
  
  /* Vercel-Inspired Light Mode Accents with Subtle Multi-Color */
  --accent-primary: #000000;
  --accent-secondary: #374151;
  --accent-tertiary: #6b7280;
  --accent-subtle: #9ca3af;
  --accent-muted: #d1d5db;
  
  /* Vercel-style subtle color accents */
  --accent-blue: #3b82f6;
  --accent-blue-subtle: #dbeafe;
  --accent-purple: #8b5cf6;
  --accent-purple-subtle: #ede9fe;
  --accent-green: #10b981;
  --accent-green-subtle: #d1fae5;
  --accent-orange: #f59e0b;
  --accent-orange-subtle: #fef3c7;
  
  --chrome-platinum: linear-gradient(135deg, #ffffff 0%, #f8fafc 50%, #f1f5f9 100%);
  --chrome-charcoal: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
  
  /* Perfect Light Mode Glass */
  --glass-bg: rgba(255, 255, 255, 0.7);
  --glass-bg-strong: rgba(255, 255, 255, 0.85);
  --glass-bg-subtle: rgba(255, 255, 255, 0.4);
  --glass-border: rgba(0, 0, 0, 0.08);
  --glass-border-strong: rgba(0, 0, 0, 0.12);
  --glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.06);
  --glass-shadow-strong: 0 20px 50px rgba(0, 0, 0, 0.12);
  --glass-shadow-subtle: 0 4px 16px rgba(0, 0, 0, 0.04);
}

/* High-Tech Modern Design System - Dark Mode First */
.dark {
  /* Enhanced Dark Mode Color System */
  --background: oklch(0.08 0 0);
  --foreground: oklch(0.95 0 0);
  --card: oklch(0.12 0 0);
  --card-foreground: oklch(0.95 0 0);
  --popover: oklch(0.12 0 0);
  --popover-foreground: oklch(0.95 0 0);
  /* Monochromatic dark theme - Pure white accents */
  --primary: 0 0% 98%;        /* #fafafa - Light for dark theme */
  --primary-foreground: 0 0% 9%; /* #171717 - Dark text on light bg */
  --secondary: oklch(0.18 0 0);
  --secondary-foreground: oklch(0.95 0 0);
  --muted: oklch(0.18 0 0);
  --muted-foreground: oklch(0.65 0 0);
  --accent: oklch(0.18 0 0);
  --accent-foreground: oklch(0.95 0 0);
  --destructive: oklch(0.55 0.25 27.325);
  --destructive-foreground: oklch(0.98 0 0);
  --border: oklch(0.18 0 0);
  --input: oklch(0.18 0 0);
  --ring: oklch(0.45 0 0);
  
  /* High-Tech Line Web Background - Dark Theme */
  --gradient-primary: linear-gradient(135deg, #000000 0%, #1a1a1a 50%, #2a2a2a 100%);
  
  /* High-Tech Web Pattern for Dark Theme */
  --gradient-hero: 
    linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.04) 50%, transparent 100%),
    linear-gradient(0deg, transparent 0%, rgba(255, 255, 255, 0.04) 50%, transparent 100%),
    linear-gradient(45deg, transparent 0%, rgba(255, 255, 255, 0.03) 50%, transparent 100%),
    linear-gradient(-45deg, transparent 0%, rgba(255, 255, 255, 0.03) 50%, transparent 100%),
    linear-gradient(135deg, #000000 0%, #1a1a1a 25%, #2a2a2a 50%, #3a3a3a 75%, #4a4a4a 100%);
  
  /* High-Tech Mesh Pattern */
  --gradient-mesh: 
    repeating-linear-gradient(0deg, transparent, transparent 20px, rgba(255, 255, 255, 0.06) 20px, rgba(255, 255, 255, 0.06) 21px),
    repeating-linear-gradient(90deg, transparent, transparent 20px, rgba(255, 255, 255, 0.06) 20px, rgba(255, 255, 255, 0.06) 21px),
    repeating-linear-gradient(45deg, transparent, transparent 28px, rgba(255, 255, 255, 0.04) 28px, rgba(255, 255, 255, 0.04) 29px),
    repeating-linear-gradient(-45deg, transparent, transparent 28px, rgba(255, 255, 255, 0.04) 28px, rgba(255, 255, 255, 0.04) 29px),
    linear-gradient(135deg, #000000 0%, #1a1a1a 20%, #2a2a2a 40%, #3a3a3a 60%, #4a4a4a 80%, #5a5a5a 100%);
  
  /* Section Backgrounds */
  --gradient-section-alt: linear-gradient(135deg, rgba(20, 20, 20, 0.98), rgba(40, 40, 40, 0.95));
  --gradient-card: linear-gradient(145deg, rgba(30, 30, 30, 0.95), rgba(50, 50, 50, 0.9));
  --gradient-glass: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.08));
  
  /* Vercel-Inspired Dark Mode Accents with Subtle Multi-Color */
  --accent-primary: #ffffff;
  --accent-secondary: #e2e8f0;
  --accent-tertiary: #94a3b8;
  --accent-subtle: #64748b;
  --accent-muted: #475569;
  
  /* Vercel-style subtle color accents for dark mode */
  --accent-blue: #60a5fa;
  --accent-blue-subtle: #1e3a8a;
  --accent-purple: #a78bfa;
  --accent-purple-subtle: #581c87;
  --accent-green: #34d399;
  --accent-green-subtle: #064e3b;
  --accent-orange: #fbbf24;
  --accent-orange-subtle: #78350f;
  
  --chrome-platinum: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 50%, #cbd5e1 100%);
  --chrome-charcoal: linear-gradient(135deg, #020617 0%, #0f172a 50%, #1e293b 100%);
  
  /* Perfect Dark Mode Glass */
  --glass-bg: rgba(15, 23, 42, 0.8);
  --glass-bg-strong: rgba(15, 23, 42, 0.9);
  --glass-bg-subtle: rgba(15, 23, 42, 0.6);
  --glass-border: rgba(255, 255, 255, 0.1);
  --glass-border-strong: rgba(255, 255, 255, 0.15);
  --glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  --glass-shadow-strong: 0 20px 50px rgba(0, 0, 0, 0.6);
  --glass-shadow-subtle: 0 4px 16px rgba(0, 0, 0, 0.3);
}

/* UI Polish Semantic Tokens - Swift-Inspired Aesthetic */
.ui-polish-enabled {
  /* Surface tokens for layered design */
  --ui-polish-surface: #0a0a0a;
  --ui-polish-surface-elev: #111111;
  --ui-polish-surface-elev-2: #1a1a1a;
  
  /* Text hierarchy */
  --ui-polish-text: #ffffff;
  --ui-polish-text-muted: #a3a3a3;
  --ui-polish-text-subtle: #737373;
  
  /* Border system */
  --ui-polish-border: #262626;
  --ui-polish-border-subtle: #171717;
  
  /* Monochromatic accent - pure white for dark theme */
  --ui-polish-accent: #ffffff;
  --ui-polish-accent-contrast: #000000;
  
  /* Interactive states */
  --ui-polish-ring: #ffffff;
  --ui-polish-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.3);
  --ui-polish-shadow-elevated: 0 4px 6px -1px rgb(0 0 0 / 0.4);
}

/* Light mode overrides for UI polish */
.ui-polish-enabled.light {
  --ui-polish-surface: #ffffff;
  --ui-polish-surface-elev: #fafafa;
  --ui-polish-surface-elev-2: #f5f5f5;
  
  --ui-polish-text: #111111;
  --ui-polish-text-muted: #6b7280;
  --ui-polish-text-subtle: #9ca3af;
  
  --ui-polish-border: #e5e7eb;
  --ui-polish-border-subtle: #f3f4f6;
  
  /* Monochromatic accent - pure black for light theme */
  --ui-polish-accent: #000000;
  --ui-polish-accent-contrast: #ffffff;
  
  --ui-polish-ring: #000000;
  --ui-polish-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --ui-polish-shadow-elevated: 0 4px 6px -1px rgb(0 0 0 / 0.1);
}

/* HT-005.5: Mobile-First Responsive Design — Touch-Optimized Experience */

/* Mobile-First Responsive Utilities */
@layer utilities {
  /* Touch Target Optimization */
  .touch-target-min {
    min-height: var(--touch-target-min);
    min-width: var(--touch-target-min);
  }
  
  .touch-target-comfortable {
    min-height: var(--touch-target-comfortable);
    min-width: var(--touch-target-comfortable);
  }
  
  .touch-target-large {
    min-height: var(--touch-target-large);
    min-width: var(--touch-target-large);
  }
  
  /* Mobile-First Spacing */
  .mobile-spacing-xs { padding: var(--spacing-mobile-xs); }
  .mobile-spacing-sm { padding: var(--spacing-mobile-sm); }
  .mobile-spacing-md { padding: var(--spacing-mobile-md); }
  .mobile-spacing-lg { padding: var(--spacing-mobile-lg); }
  .mobile-spacing-xl { padding: var(--spacing-mobile-xl); }
  .mobile-spacing-2xl { padding: var(--spacing-mobile-2xl); }
  
  /* Responsive Container System */
  .container-responsive {
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    padding-left: var(--spacing-mobile-md);
    padding-right: var(--spacing-mobile-md);
  }
  
  @media (min-width: 24rem) {
    .container-responsive {
      padding-left: var(--spacing-mobile-lg);
      padding-right: var(--spacing-mobile-lg);
    }
  }
  
  @media (min-width: 48rem) {
    .container-responsive {
      padding-left: var(--spacing-desktop-md);
      padding-right: var(--spacing-desktop-md);
      max-width: 48rem;
    }
  }
  
  @media (min-width: 64rem) {
    .container-responsive {
      padding-left: var(--spacing-desktop-lg);
      padding-right: var(--spacing-desktop-lg);
      max-width: 64rem;
    }
  }
  
  @media (min-width: 80rem) {
    .container-responsive {
      padding-left: var(--spacing-desktop-xl);
      padding-right: var(--spacing-desktop-xl);
      max-width: 80rem;
    }
  }
  
  /* Mobile-First Grid System */
  .grid-mobile-first {
    display: grid;
    gap: var(--spacing-mobile-md);
    grid-template-columns: 1fr;
  }
  
  @media (min-width: 24rem) {
    .grid-mobile-first {
      gap: var(--spacing-mobile-lg);
    }
  }
  
  @media (min-width: 48rem) {
    .grid-mobile-first {
      gap: var(--spacing-desktop-md);
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 64rem) {
    .grid-mobile-first {
      gap: var(--spacing-desktop-lg);
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (min-width: 80rem) {
    .grid-mobile-first {
      gap: var(--spacing-desktop-xl);
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  /* Touch-Friendly Interactive Elements */
  .touch-friendly {
    @apply touch-target-comfortable;
    @apply cursor-pointer;
    @apply select-none;
    @apply transition-all duration-200 ease-out;
    @apply active:scale-95;
  }
  
  .touch-friendly:hover {
    @apply scale-105;
  }
  
  /* Mobile-Optimized Typography */
  .text-mobile-responsive {
    font-size: clamp(var(--text-sm), 2.5vw, var(--text-base));
    line-height: var(--leading-relaxed);
  }
  
  .text-mobile-heading {
    font-size: clamp(var(--text-lg), 4vw, var(--text-2xl));
    line-height: var(--leading-tight);
    font-weight: var(--font-weight-semibold);
  }
  
  .text-mobile-display {
    font-size: clamp(var(--text-2xl), 6vw, var(--text-4xl));
    line-height: var(--leading-tight);
    font-weight: var(--font-weight-bold);
  }
  
  /* Mobile Navigation Enhancements */
  .mobile-nav-item {
    @apply touch-target-comfortable;
    @apply flex items-center justify-start;
    @apply px-4 py-3;
    @apply text-left;
    @apply rounded-lg;
    @apply transition-all duration-200;
    @apply hover:bg-gray-100;
    @apply active:bg-gray-200;
  }
  
  .mobile-nav-item.active {
    @apply bg-blue-50;
    @apply text-blue-600;
    @apply font-medium;
  }
  
  /* Safe Area Insets for Modern Devices */
  .safe-area-inset {
    padding-left: env(safe-area-inset-left);
    padding-right: env(safe-area-inset-right);
    padding-top: env(safe-area-inset-top);
    padding-bottom: env(safe-area-inset-bottom);
  }
  
  /* Mobile-First Animation Optimizations */
  .mobile-optimized-animation {
    @apply transition-transform duration-200 ease-out;
    @apply will-change-transform;
  }
  
  @media (prefers-reduced-motion: reduce) {
    .mobile-optimized-animation {
      @apply transition-none;
    }
  }
}

/* HT-005.4: Typography System Implementation */

/* Base Typography Setup */
html {
  font-family: var(--font-family-sans);
  font-size: var(--text-base);
  line-height: var(--leading-normal);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

body {
  background: var(--bg-primary);
  color: var(--foreground);
  font-family: var(--font-family-sans);
  font-size: var(--text-body-desktop);
  font-weight: var(--font-weight-normal);
  line-height: var(--text-body-leading);
  letter-spacing: var(--text-body-tracking);
  background-attachment: fixed;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

/* Typography Hierarchy Classes */
.text-hero {
  font-size: var(--text-hero-size);
  font-weight: var(--text-hero-weight);
  line-height: var(--text-hero-leading);
  letter-spacing: var(--text-hero-tracking);
}

.text-display {
  font-size: var(--text-display-size);
  font-weight: var(--text-display-weight);
  line-height: var(--text-display-leading);
  letter-spacing: var(--text-display-tracking);
}

.text-heading {
  font-size: var(--text-heading-size);
  font-weight: var(--text-heading-weight);
  line-height: var(--text-heading-leading);
  letter-spacing: var(--text-heading-tracking);
}

.text-body {
  font-size: var(--text-body-size);
  font-weight: var(--text-body-weight);
  line-height: var(--text-body-leading);
  letter-spacing: var(--text-body-tracking);
}

.text-caption {
  font-size: var(--text-caption-size);
