@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-10px);
  }
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

@keyframes pulse-glow {
  0%, 100% {
    opacity: 0.4;
    transform: scale(1);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.05);
  }
}

@keyframes grid-move {
  0% {
    transform: translateX(0) translateY(0);
  }
  100% {
    transform: translateX(-50px) translateY(-50px);
  }
}

@keyframes circuit-flow {
  0% {
    background-position: 0% 0%, 0% 0%;
  }
  50% {
    background-position: 100% 100%, -100% -100%;
  }
  100% {
    background-position: 0% 0%, 0% 0%;
  }
}

@keyframes data-stream {
  0% {
    opacity: 0.2;
    transform: scale(1) rotate(0deg);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.02) rotate(180deg);
  }
  100% {
    opacity: 0.2;
    transform: scale(1) rotate(360deg);
  }
}

@keyframes vercel-pulse {
  0%, 100% {
    opacity: 0.4;
    transform: scale(1);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.05);
  }
}

@keyframes vercel-float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-8px);
  }
}

@keyframes vercel-glow {
  0%, 100% {
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.1);
  }
  50% {
    box-shadow: 0 0 40px rgba(59, 130, 246, 0.2);
  }
}


.shimmer-effect {
  background: linear-gradient(
    90deg,
    var(--glass-bg) 25%,
    var(--glass-bg-strong) 50%,
    var(--glass-bg) 75%
  );
  background-size: 200% 100%;
  animation: shimmer 2s infinite;
}

.high-tech-pattern {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -1;
  opacity: 1;
  transition: all 0.5s ease;
}

.high-tech-pattern::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: calc(100% + 80px);
  height: calc(100% + 80px);
  background-image: 
    radial-gradient(circle at 50% 50%, var(--glass-border) 1px, transparent 1px),
    linear-gradient(0deg, transparent 24px, var(--glass-border) 25px, var(--glass-border) 26px, transparent 27px),
    linear-gradient(90deg, transparent 24px, var(--glass-border) 25px, var(--glass-border) 26px, transparent 27px);
  background-size: 25px 25px, 50px 50px, 50px 50px;
  opacity: 0.4;
  animation: grid-move 30s linear infinite;
}

.high-tech-pattern::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    conic-gradient(from 0deg at 20% 20%, var(--glass-border) 0deg, transparent 45deg, var(--glass-border) 90deg, transparent 135deg),
    conic-gradient(from 180deg at 80% 80%, var(--glass-border) 0deg, transparent 45deg, var(--glass-border) 90deg, transparent 135deg);
  background-size: 200px 200px, 150px 150px;
  opacity: 0.2;
  animation: grid-move 40s linear infinite reverse;
}

