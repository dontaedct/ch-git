{
  "id": "base-microapp",
  "name": "Base Micro App Configuration",
  "version": "1.0.0",
  "theme": {
    "colors": {
      "primary": "#007AFF",
      "neutral": {
        "50": "#F9FAFB",
        "100": "#F3F4F6",
        "200": "#E5E7EB",
        "300": "#D1D5DB",
        "400": "#9CA3AF",
        "500": "#6B7280",
        "600": "#4B5563",
        "700": "#374151",
        "800": "#1F2937",
        "900": "#111827"
      },
      "accent": "#10B981"
    },
    "typography": {
      "fontFamily": "system-ui, -apple-system, sans-serif",
      "scales": {
        "display": "2.5rem",
        "headline": "1.5rem",
        "body": "1rem",
        "caption": "0.875rem"
      }
    },
    "motion": {
      "duration": "150ms",
      "easing": "cubic-bezier(.2,.8,.2,1)"
    },
    "radii": {
      "sm": "4px",
      "md": "8px",
      "lg": "12px"
    },
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
      "lg": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
    }
  },
  "questionnaire": {
    "id": "base-questionnaire",
    "title": "Discovery Questionnaire",
    "description": "Help us understand your needs and goals",
    "steps": [
      {
        "id": "step1",
        "title": "Getting Started",
        "questions": [
          {
            "id": "business-type",
            "text": "What type of business are you in?",
            "type": "chips",
            "required": true,
            "options": [
              {
                "value": "saas",
                "label": "Software/SaaS"
              },
              {
                "value": "ecommerce",
                "label": "E-commerce"
              },
              {
                "value": "consulting",
                "label": "Consulting"
              },
              {
                "value": "agency",
                "label": "Agency"
              },
              {
                "value": "nonprofit",
                "label": "Non-profit"
              }
            ],
            "allowCustom": true
          },
          {
            "id": "company-size",
            "text": "What is your company size?",
            "type": "select",
            "required": true,
            "options": [
              {
                "value": "startup",
                "label": "Startup (1-10 employees)"
              },
              {
                "value": "small",
                "label": "Small (11-50 employees)"
              },
              {
                "value": "medium",
                "label": "Medium (51-200 employees)"
              },
              {
                "value": "large",
                "label": "Large (200+ employees)"
              }
            ]
          }
        ]
      },
      {
        "id": "step2",
        "title": "Your Needs",
        "questions": [
          {
            "id": "primary-goals",
            "text": "What are your primary goals?",
            "type": "chips-multi",
            "required": true,
            "options": [
              {
                "value": "growth",
                "label": "Business Growth"
              },
              {
                "value": "efficiency",
                "label": "Operational Efficiency"
              },
              {
                "value": "automation",
                "label": "Process Automation"
              },
              {
                "value": "analytics",
                "label": "Better Analytics"
              },
              {
                "value": "customer-experience",
                "label": "Customer Experience"
              }
            ],
            "allowCustom": true
          },
          {
            "id": "budget-range",
            "text": "What is your budget range?",
            "type": "select",
            "required": false,
            "options": [
              {
                "value": "under-5k",
                "label": "Under ,000"
              },
              {
                "value": "5k-15k",
                "label": ",000 - 5,000"
              },
              {
                "value": "15k-50k",
                "label": "5,000 - 0,000"
              },
              {
                "value": "50k-plus",
                "label": "0,000+"
              }
            ]
          },
          {
            "id": "timeline",
            "text": "What is your preferred timeline?",
            "type": "select",
            "required": true,
            "options": [
              {
                "value": "urgent",
                "label": "ASAP (within 1 month)"
              },
              {
                "value": "soon",
                "label": "Soon (1-3 months)"
              },
              {
                "value": "flexible",
                "label": "Flexible (3-6 months)"
              },
              {
                "value": "planning",
                "label": "Planning ahead (6+ months)"
              }
            ]
          }
        ]
      },
      {
        "id": "step3",
        "title": "Final Details",
        "questions": [
          {
            "id": "previous-experience",
            "text": "Have you worked with similar solutions before?",
            "type": "toggle",
            "required": true
          },
          {
            "id": "additional-info",
            "text": "Anything else you would like us to know?",
            "type": "long-text",
            "required": false,
            "placeholder": "Share any additional context, requirements, or questions..."
          }
        ]
      },
      {
        "id": "step4",
        "title": "Partnership Preferences",
        "questions": [
          {
            "id": "communication-style",
            "text": "How do you prefer to communicate during projects?",
            "type": "select",
            "required": true,
            "options": [
              {
                "value": "frequent",
                "label": "Daily check-ins and updates"
              },
              {
                "value": "regular",
                "label": "Weekly status meetings"
              },
              {
                "value": "milestone",
                "label": "Milestone-based updates"
              },
              {
                "value": "minimal",
                "label": "Minimal but essential updates"
              }
            ]
          },
          {
            "id": "support-preferences",
            "text": "What type of ongoing support interests you most?",
            "type": "chips-multi",
            "required": false,
            "options": [
              {
                "value": "training",
                "label": "Team Training"
              },
              {
                "value": "documentation",
                "label": "Documentation"
              },
              {
                "value": "maintenance",
                "label": "Ongoing Maintenance"
              },
              {
                "value": "optimization",
                "label": "Performance Optimization"
              }
            ]
          }
        ]
      }
    ],
    "progress": {
      "style": "thinBar",
      "showNumbers": true,
      "showTitles": false
    },
    "navigation": {
      "previousLabel": "Previous",
      "nextLabel": "Next",
      "submitLabel": "Get My Recommendations"
    }
  },
  "consultation": {
    "summary": {
      "minWords": 100,
      "maxWords": 200,
      "tone": "professional"
    },
    "planDeck": {
      "primaryCount": 2,
      "alternatesCount": 1
    },
    "sections": [
      "whatYouGet",
      "whyThisFits",
      "timeline",
      "nextSteps"
    ],
    "actions": {
      "downloadPdf": true,
      "emailCopy": true,
      "bookCtaLabel": "Book a meeting"
    }
  },
  "catalog": {
    "id": "base-catalog",
    "name": "Service Plans",
    "plans": [
      {
        "id": "foundation",
        "title": "Foundation Plan",
        "description": "Essential solutions for getting started",
        "priceBand": ",000 - 5,000",
        "includes": [
          "Initial assessment and strategy",
          "Core implementation",
          "Basic training and documentation",
          "30-day support"
        ],
        "timeline": "4-6 weeks",
        "tier": "foundation",
        "eligibleIf": {
          "company-size": [
            "startup",
            "small"
          ],
          "budget-range": [
            "under-5k",
            "5k-15k"
          ]
        },
        "content": {
          "whatYouGet": "A comprehensive foundation that addresses your core needs with proven solutions and best practices.",
          "whyThisFits": "Perfect for organizations looking to establish solid fundamentals without overwhelming complexity.",
          "timeline": "We will complete your project in 4-6 weeks with regular check-ins and milestone deliveries.",
          "nextSteps": "Schedule a discovery call to discuss your specific requirements and create a detailed project plan."
        }
      },
      {
        "id": "growth",
        "title": "Growth Plan",
        "description": "Advanced solutions for scaling businesses",
        "priceBand": "5,000 - 0,000",
        "includes": [
          "Comprehensive strategy development",
          "Advanced implementation",
          "Custom integrations",
          "Team training and documentation",
          "90-day support and optimization"
        ],
        "timeline": "8-12 weeks",
        "tier": "growth",
        "eligibleIf": {
          "company-size": [
            "small",
            "medium"
          ],
          "budget-range": [
            "15k-50k"
          ]
        },
        "content": {
          "whatYouGet": "A complete solution designed to scale with your business, including advanced features and ongoing optimization.",
          "whyThisFits": "Ideal for growing businesses that need robust solutions with room for expansion and customization.",
          "timeline": "8-12 weeks of focused development with iterative improvements and team collaboration.",
          "nextSteps": "Let us schedule a strategic planning session to map out your growth trajectory and implementation roadmap."
        }
      },
      {
        "id": "enterprise",
        "title": "Enterprise Plan",
        "description": "Custom solutions for large organizations",
        "priceBand": "0,000+",
        "includes": [
          "Enterprise-grade architecture",
          "Fully custom development",
          "Multiple system integrations",
          "Comprehensive training program",
          "Dedicated support and success management",
          "Ongoing optimization and updates"
        ],
        "timeline": "12-20 weeks",
        "tier": "enterprise",
        "eligibleIf": {
          "company-size": [
            "medium",
            "large"
          ],
          "budget-range": [
            "50k-plus"
          ]
        },
        "content": {
          "whatYouGet": "A fully customized enterprise solution with dedicated resources, premium support, and strategic partnership.",
          "whyThisFits": "Built for organizations that require enterprise-level security, scalability, and complex integrations.",
          "timeline": "12-20 weeks of collaborative development with your team, including extensive testing and training phases.",
          "nextSteps": "Connect with our enterprise team for a comprehensive assessment and custom proposal development."
        }
      }
    ],
    "defaults": {
      "fallbackPlan": "foundation",
      "preferHigherTier": true
    }
  },
  "modules": {
    "modules": [
      {
        "id": "analytics",
        "label": "Advanced Analytics",
        "description": "Comprehensive reporting and insights",
        "tiers": [
          "growth",
          "enterprise"
        ]
      },
      {
        "id": "automation",
        "label": "Process Automation",
        "description": "Streamlined workflows and efficiency",
        "tiers": [
          "foundation",
          "growth",
          "enterprise"
        ]
      },
      {
        "id": "integrations",
        "label": "Third-party Integrations",
        "description": "Connect with your existing tools",
        "tiers": [
          "growth",
          "enterprise"
        ]
      },
      {
        "id": "support",
        "label": "Premium Support",
        "description": "Priority assistance and guidance",
        "tiers": [
          "enterprise"
        ]
      }
    ]
  },
  "integrations": {
    "n8n": {
      "webhookUrl": "https://webhook.example.com/microapp",
      "enabledEvents": [
        "lead_started_questionnaire",
        "lead_completed_questionnaire",
        "consultation_generated",
        "pdf_downloaded",
        "email_copy_requested"
      ]
    },
    "email": {
      "fromAddress": "noreply@example.com",
      "subjectTemplate": "Your Personalized Recommendations"
    }
  }
}
