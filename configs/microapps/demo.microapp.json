{
  "id": "demo-microapp",
  "name": "Demo Configuration",
  "version": "1.0.0",
  "questionnaire": {
    "id": "demo-questionnaire",
    "title": "Enhanced Discovery Questionnaire",
    "description": "Help us understand your needs and goals with our updated questionnaire",
    "steps": [
      {
        "id": "step1",
        "title": "Business Basics",
        "questions": [
          {
            "id": "business-type",
            "text": "What type of business are you in?",
            "type": "chips",
            "required": true,
            "options": [
              {
                "value": "saas",
                "label": "Software/SaaS"
              },
              {
                "value": "ecommerce",
                "label": "E-commerce"
              },
              {
                "value": "consulting",
                "label": "Consulting"
              },
              {
                "value": "agency",
                "label": "Agency"
              },
              {
                "value": "nonprofit",
                "label": "Non-profit"
              }
            ],
            "allowCustom": true
          }
        ]
      },
      {
        "id": "step2",
        "title": "Company Details",
        "questions": [
          {
            "id": "company-size",
            "text": "What is your company size?",
            "type": "select",
            "required": true,
            "options": [
              {
                "value": "startup",
                "label": "Startup (1-10 employees)"
              },
              {
                "value": "small",
                "label": "Small (11-50 employees)"
              },
              {
                "value": "medium",
                "label": "Medium (51-200 employees)"
              },
              {
                "value": "large",
                "label": "Large (200+ employees)"
              }
            ]
          },
          {
            "id": "industry-focus",
            "text": "What industry do you primarily serve?",
            "type": "chips",
            "required": false,
            "options": [
              {
                "value": "technology",
                "label": "Technology"
              },
              {
                "value": "healthcare",
                "label": "Healthcare"
              },
              {
                "value": "finance",
                "label": "Finance"
              },
              {
                "value": "retail",
                "label": "Retail"
              },
              {
                "value": "manufacturing",
                "label": "Manufacturing"
              }
            ],
            "allowCustom": true
          }
        ]
      },
      {
        "id": "step3",
        "title": "Goals & Priorities",
        "questions": [
          {
            "id": "primary-goals",
            "text": "What are your primary goals?",
            "type": "chips-multi",
            "required": true,
            "options": [
              {
                "value": "growth",
                "label": "Business Growth"
              },
              {
                "value": "efficiency",
                "label": "Operational Efficiency"
              },
              {
                "value": "automation",
                "label": "Process Automation"
              },
              {
                "value": "analytics",
                "label": "Better Analytics"
              },
              {
                "value": "customer-experience",
                "label": "Customer Experience"
              }
            ],
            "allowCustom": true
          }
        ]
      },
      {
        "id": "step4",
        "title": "Timeline & Experience",
        "questions": [
          {
            "id": "timeline",
            "text": "What is your preferred timeline?",
            "type": "select",
            "required": true,
            "options": [
              {
                "value": "urgent",
                "label": "ASAP (within 1 month)"
              },
              {
                "value": "soon",
                "label": "Soon (1-3 months)"
              },
              {
                "value": "flexible",
                "label": "Flexible (3-6 months)"
              },
              {
                "value": "planning",
                "label": "Planning ahead (6+ months)"
              }
            ]
          },
          {
            "id": "previous-experience",
            "text": "Have you worked with similar solutions before?",
            "type": "toggle",
            "required": true
          }
        ]
      }
    ],
    "progress": {
      "style": "thinBar",
      "showNumbers": true,
      "showTitles": false
    },
    "navigation": {
      "previousLabel": "Back",
      "nextLabel": "Continue",
      "submitLabel": "Get My Custom Recommendations"
    }
  }
}
