# OSS Hero Environment Configuration
# Copy this file to .env.local and fill in your actual values
# 
# SECURITY: Never commit .env.local or any file containing real secrets
# NEXT_PUBLIC_* variables are exposed to the client - use with caution

# =============================================================================
# CORE APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
# Scope: server | Purpose: Runtime environment detection | Used in: lib/env.ts, next.config.ts
NODE_ENV=development

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase Project URL (Public)
# Scope: client | Purpose: Database connection URL | Used in: lib/env.ts, lib/supabase/*
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (Public)
# Scope: client | Purpose: Client-side database access | Used in: lib/env.ts, lib/supabase/*
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Supabase Service Role Key (Server Only)
# Scope: server | Purpose: Server-side database operations | Used in: lib/env.ts, scripts/guardian.*
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Supabase Database URL (Server Only)
# Scope: server | Purpose: Direct database connection for scripts | Used in: scripts/guardian.*
SUPABASE_DB_URL=postgresql://postgres:password@localhost:54322/postgres

# =============================================================================
# AUTHENTICATION & USER MANAGEMENT
# =============================================================================

# Default Coach ID (Server Only)
# Scope: server | Purpose: Default coach assignment for new users | Used in: lib/env.ts
DEFAULT_COACH_ID=your-coach-uuid-here

# =============================================================================
# EMAIL SERVICES
# =============================================================================

# Resend API Key (Server Only)
# Scope: server | Purpose: Email sending service | Used in: lib/email.ts
RESEND_API_KEY=your_resend_api_key_here

# Resend From Address (Server Only)
# Scope: server | Purpose: Default sender email address | Used in: lib/email.ts
RESEND_FROM=Coach Hub <no-reply@yourdomain.com>

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================

# Sentry DSN (Server Only)
# Scope: server | Purpose: Server-side error tracking | Used in: sentry.server.config.ts
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry DSN (Public)
# Scope: client | Purpose: Client-side error tracking | Used in: sentry.client.config.ts
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe Secret Key (Server Only)
# Scope: server | Purpose: Payment processing | Used in: app/api/stripe/*
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Publishable Key (Public)
# Scope: client | Purpose: Client-side payment forms | Used in: components/payment/*
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret (Server Only)
# Scope: server | Purpose: Webhook signature verification | Used in: app/api/webhooks/stripe/*
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# AUTOMATION & WORKFLOWS
# =============================================================================

# n8n Webhook URL (Server Only)
# Scope: server | Purpose: Workflow automation triggers | Used in: app/api/webhooks/*
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id

# =============================================================================
# NOTIFICATIONS & ALERTS
# =============================================================================

# Slack Webhook URL (Server Only)
# Scope: server | Purpose: Slack notifications and alerts | Used in: app/api/notifications/*
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# CI/CD & DEPLOYMENT
# =============================================================================

# GitHub Token (Server Only)
# Scope: server | Purpose: GitHub API access for CI/CD | Used in: scripts/ci/*
GITHUB_TOKEN=ghp_your_github_token_here

# GitHub Repository (Server Only)
# Scope: server | Purpose: Repository identification for CI/CD | Used in: scripts/ci/*
GITHUB_REPO=your-org/your-repo

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug Mode (Public)
# Scope: client | Purpose: Enable debug logging in development | Used in: lib/env-client.ts
NEXT_PUBLIC_DEBUG=0

# Safe Mode (Public)
# Scope: client | Purpose: Enable safe mode features | Used in: lib/env-client.ts
NEXT_PUBLIC_SAFE_MODE=0

# AI Live Mode (Public)
# Scope: client | Purpose: Enable AI live features | Used in: lib/env-client.ts
NEXT_PUBLIC_ENABLE_AI_LIVE=0

# =============================================================================
# SECURITY & CRON JOBS
# =============================================================================

# Cron Secret (Server Only)
# Scope: server | Purpose: Secure cron job execution | Used in: app/api/cron/*
CRON_SECRET=your_secure_cron_secret_here

# =============================================================================
# DEPLOYMENT PLATFORM
# =============================================================================

# Vercel Environment (Auto-set by Vercel)
# Scope: client | Purpose: Deployment environment detection | Used in: lib/env-client.ts
NEXT_PUBLIC_VERCEL_ENV=development

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================

# Port (Development Only)
# Scope: server | Purpose: Development server port | Used in: scripts/dev-bootstrap.js
PORT=3000

# Auto-fix Mode (Development Only)
# Scope: server | Purpose: Enable automatic fixes in scripts | Used in: scripts/doctor.ts
AUTO=0

# CI Mode (Auto-set by CI)
# Scope: server | Purpose: CI environment detection | Used in: package.json, scripts/*
CI=false
