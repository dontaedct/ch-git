                "value": "events"
              },
              {
                "label": "Wholesale/Business",
                "value": "wholesale"
              }
            ]
          },
          {
            "id": "f4",
            "name": "message",
            "type": "textarea",
            "label": "Message",
            "placeholder": "Tell us how we can help you...",
            "required": true,
            "validation": {
              "minLength": 10,
              "maxLength": 1000
