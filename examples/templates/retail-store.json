      "type": "form",
      "version": "1.0.0",
      "props": {
        "title": "Get in Touch",
        "description": "Questions about our coffee, catering, or special events? We'd love to hear from you!",
        "fields": [
          {
            "id": "f1",
            "name": "name",
            "type": "text",
            "label": "Your Name",
            "required": true
