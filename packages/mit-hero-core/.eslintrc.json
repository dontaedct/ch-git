{
  "extends": ["../../.eslintrc.json"],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          // MIT-HERO-MOD: Prevent mit-hero-core from importing app files
          // This ensures clean separation between core package and coaching app
          "app/**",
          "components/**", 
          "lib/**",
          "data/**",
          "types/**",
          "hooks/**",
          "styles/**",
          "scripts/**",
          "docs/**",
          "tests/**",
          "reports/**"
        ]
      }
    ]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "*.min.js",
    "*.bundle.js",
    "coverage/",
    "*.d.ts"
  ]
}
