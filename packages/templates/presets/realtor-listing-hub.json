{
  "id": "realtor-listing-hub-preset",
  "name": "Realtor Listing Hub",
  "version": "1.0.0",
  "description": "Buyer intake and listing match flow for real estate teams",
  "tier": "pro",
  "preset": "realtor-listing-hub",
  "features": {
    "database": true,
    "email": true,
    "payments": false,
    "webhooks": true,
    "automation": false,
    "notifications": true,
    "error_tracking": false,
    "admin_operations": false,
    "ai_features": false,
    "debug_mode": false,
    "safe_mode": true,
    "performance_monitoring": true,
    "health_checks": true
  },
  "theme": {
    "colors": {
      "primary": "#0EA5E9",
      "neutral": {
        "50": "#F8FAFC",
        "100": "#F1F5F9",
        "200": "#E2E8F0",
        "300": "#CBD5E1",
        "400": "#94A3B8",
        "500": "#64748B",
        "600": "#475569",
        "700": "#334155",
        "800": "#1E293B",
        "900": "#0F172A"
      },
      "accent": "#22D3EE"
    },
    "typography": {
      "fontFamily": "'Inter', system-ui, -apple-system, sans-serif",
      "scales": {
        "display": "2.5rem",
        "headline": "1.75rem",
        "body": "1rem",
        "caption": "0.875rem"
      }
    },
    "motion": {
      "duration": "200ms",
      "easing": "cubic-bezier(.2,.8,.2,1)"
    },
    "radii": {
      "sm": "6px",
      "md": "12px",
      "lg": "18px"
    },
    "shadows": {
      "sm": "0 2px 4px 0 rgba(14, 165, 233, 0.08)",
      "md": "0 6px 12px -2px rgba(14, 165, 233, 0.12)",
      "lg": "0 24px 32px -8px rgba(14, 165, 233, 0.16)"
    }
  },
  "questionnaire": {
    "id": "realtor-buyer-intake",
    "title": "Tell Us About Your Next Home",
    "description": "Answer a few quick questions and we’ll match you with listings that fit your needs.",
    "steps": [
      {
        "id": "contact-info",
        "title": "Your Contact Details",
        "questions": [
          {
            "id": "full-name",
            "text": "What's your name?",
            "type": "short-text",
            "required": true,
            "placeholder": "First and Last Name"
          },
          {
            "id": "phone",
            "text": "Phone number",
            "type": "short-text",
            "required": true,
            "placeholder": "(555) 123-4567"
          },
          {
            "id": "email",
            "text": "Email address",
            "type": "short-text",
            "required": true,
            "placeholder": "your.email@example.com"
          },
          {
            "id": "preferred-contact",
            "text": "Preferred way to reach you",
            "type": "chips",
            "required": true,
            "options": [
              { "value": "text", "label": "Text Message" },
              { "value": "call", "label": "Phone Call" },
              { "value": "email", "label": "Email" }
            ]
          }
        ]
      },
      {
        "id": "search-criteria",
        "title": "Home Search Criteria",
        "questions": [
          {
            "id": "location",
            "text": "City or neighborhood",
            "type": "short-text",
            "required": true,
            "placeholder": "e.g., Frisco, TX or 'Downtown'"
          },
          {
            "id": "property-type",
            "text": "Property type",
            "type": "chips-multi",
            "required": true,
            "options": [
              { "value": "single-family", "label": "Single-Family" },
              { "value": "condo", "label": "Condo" },
              { "value": "townhome", "label": "Townhome" },
              { "value": "multi-family", "label": "Multi-Family" },
              { "value": "land", "label": "Land" }
            ],
            "allowCustom": true
          },
          {
            "id": "bedrooms",
            "text": "Minimum bedrooms",
            "type": "select",
            "required": true,
            "options": [
              { "value": "1", "label": "1+" },
              { "value": "2", "label": "2+" },
              { "value": "3", "label": "3+" },
              { "value": "4", "label": "4+" },
              { "value": "5", "label": "5+" }
            ]
          },
          {
            "id": "bathrooms",
            "text": "Minimum bathrooms",
            "type": "select",
            "required": true,
            "options": [
              { "value": "1", "label": "1+" },
              { "value": "2", "label": "2+" },
              { "value": "3", "label": "3+" }
            ]
          },
          {
            "id": "budget",
            "text": "Purchase budget",
            "type": "select",
            "required": true,
            "options": [
              { "value": "under-300k", "label": "Under $300k" },
              { "value": "300-500k", "label": "$300k - $500k" },
              { "value": "500-800k", "label": "$500k - $800k" },
              { "value": "800k-1.5m", "label": "$800k - $1.5M" },
              { "value": "1_5m_plus", "label": "$1.5M+" }
            ]
          },
          {
            "id": "timeline",
            "text": "When are you looking to move?",
            "type": "select",
            "required": true,
            "options": [
              { "value": "asap", "label": "ASAP (0-30 days)" },
              { "value": "1-3mo", "label": "1-3 months" },
              { "value": "3-6mo", "label": "3-6 months" },
              { "value": "6mo+", "label": "6+ months" }
            ]
          },
          {
            "id": "preapproved",
            "text": "Are you pre-approved for a mortgage?",
            "type": "toggle",
            "required": false
          }
        ]
      },
      {
        "id": "must-haves",
        "title": "Must‑Haves & Nice‑to‑Haves",
        "questions": [
          {
            "id": "must-haves",
            "text": "Must-have features",
            "type": "chips-multi",
            "required": false,
            "options": [
              { "value": "garage", "label": "Garage" },
              { "value": "yard", "label": "Yard" },
              { "value": "updated-kitchen", "label": "Updated Kitchen" },
              { "value": "home-office", "label": "Home Office" },
              { "value": "pool", "label": "Pool" },
              { "value": "great-schools", "label": "Great Schools" },
              { "value": "walkable", "label": "Walkability" },
              { "value": "single-story", "label": "Single-Story" },
              { "value": "new-construction", "label": "New Construction" }
            ],
            "allowCustom": true
          },
          {
            "id": "nice-to-haves",
            "text": "Nice-to-have features",
            "type": "long-text",
            "required": false,
            "placeholder": "Tell us any preferences or deal‑breakers"
          }
        ]
      }
    ],
    "progress": {
      "style": "thinBar",
      "showNumbers": true,
      "showTitles": false
    },
    "navigation": {
      "previousLabel": "Back",
      "nextLabel": "Continue",
      "submitLabel": "Get Matches"
    }
  },
  "consultation": {
    "summary": { "minWords": 80, "maxWords": 150, "tone": "friendly" },
    "planDeck": { "primaryCount": 2, "alternatesCount": 1 },
    "sections": ["whatYouGet", "whyThisFits", "timeline", "nextSteps"],
    "actions": {
      "downloadPdf": true,
      "emailCopy": true,
      "bookCtaLabel": "Request a Showing"
    }
  },
  "catalog": {
    "id": "realtor-plans",
    "name": "Buyer Journey Plans",
    "plans": [
      {
        "id": "first-time-buyer",
        "title": "First-Time Buyer Starter",
        "description": "Guided process for first-time buyers with education, tours, and offer strategy",
        "priceBand": "Typical budget: $300k - $500k",
        "includes": [
          "Personalized listing feed",
          "Weekend tour scheduling",
          "Offer strategy session",
          "Lender introductions"
        ],
        "timeline": "4-12 weeks",
        "tier": "foundation",
        "eligibleIf": { "budget": ["under-300k", "300-500k"] },
        "content": {
          "whatYouGet": "Clear next steps, curated listings, and hands-on guidance from search to close.",
          "whyThisFits": "Ideal for buyers getting started who want a smooth, informed process.",
          "timeline": "Most first-time buyers find a home within 1-3 months with 3–6 tours.",
          "nextSteps": "We’ll set up your listing alerts and book your first tour dates."
        }
      },
      {
        "id": "move-up-buyer",
        "title": "Move‑Up Buyer Plan",
        "description": "Streamlined plan for upsizing with coordinated sale/buy timeline",
        "priceBand": "Typical budget: $500k - $800k",
        "includes": [
          "Advanced feed filters",
          "Neighborhood reports",
          "Offer competitiveness review",
          "Pre‑inspection guidance"
        ],
        "timeline": "3-8 weeks",
        "tier": "growth",
        "eligibleIf": {
          "budget": ["500-800k", "800k-1.5m"],
          "timeline": ["asap", "1-3mo"]
        },
        "content": {
          "whatYouGet": "Faster short‑list creation and tactical offer positioning to win in your market.",
          "whyThisFits": "Built for buyers who know their must‑haves and want efficiency.",
          "timeline": "Target decision window under 8 weeks with 2–4 focused tour days.",
          "nextSteps": "We’ll finalize filters and line up the first 6–10 listings to tour."
        }
      },
      {
        "id": "luxury-collection",
        "title": "Luxury Collection",
        "description": "White‑glove service with private tours, expert negotiations, and concierge support",
        "priceBand": "Typical budget: $1.5M+",
        "includes": [
          "Private/virtual tours",
          "Custom market briefs",
          "Escrow timeline management",
          "Concierge move‑in support"
        ],
        "timeline": "6-16 weeks",
        "tier": "enterprise",
        "eligibleIf": { "budget": ["1_5m_plus"] },
        "content": {
          "whatYouGet": "Discreet, end‑to‑end representation with access to off‑market opportunities.",
          "whyThisFits": "Perfect for executive relocation and premium neighborhoods.",
          "timeline": "Typical cycles run 1–4 months including private previews.",
          "nextSteps": "We’ll schedule a private consultation and align on neighborhoods and comps."
        }
      }
    ],
    "defaults": { "fallbackPlan": "first-time-buyer", "preferHigherTier": true }
  },
  "modules": {
    "modules": [
      {
        "id": "mortgage-preapproval",
        "label": "Mortgage Pre‑Approval Assist",
        "description": "Get matched with trusted lenders",
        "tiers": ["foundation", "growth", "enterprise"]
      },
      {
        "id": "neighborhood-reports",
        "label": "Neighborhood Reports",
        "description": "School, commute, and market stats",
        "tiers": ["growth", "enterprise"]
      },
      {
        "id": "virtual-tours",
        "label": "Virtual Tours",
        "description": "HD video and live walk‑throughs",
        "tiers": ["growth", "enterprise"]
      },
      {
        "id": "showing-scheduler",
        "label": "Showing Scheduler",
        "description": "Smart routing for tour days",
        "tiers": ["enterprise"]
      }
    ]
  },
  "integrations": {
    "n8n": {
      "webhookUrl": "https://webhook.example.com/realtor-listing-hub",
      "enabledEvents": [
        "lead_started_questionnaire",
        "lead_completed_questionnaire",
        "consultation_generated",
        "email_copy_requested"
      ]
    },
    "email": {
      "fromAddress": "hello@yourrealty.com",
      "subjectTemplate": "Your Personalized Home Matches"
    }
  }
}
