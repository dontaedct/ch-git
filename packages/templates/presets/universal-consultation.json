  "description": "Complete universal consultation micro-app with AI-powered generation, white-labeling, and multi-industry support",
  "tier": "advanced",
  "preset": "universal-consultation",
  "features": {
    "database": true,
    "email": true,
    "payments": false,
    "webhooks": true,
    "automation": true,
    "notifications": true,
    "error_tracking": true,
    "admin_operations": true,
    "ai_features": true,
    "debug_mode": false,
    "safe_mode": true,
    "performance_monitoring": true,
    "health_checks": true,
    "white_labeling": true,
    "multi_tenant": true,
    "service_packages": true,
